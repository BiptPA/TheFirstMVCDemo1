<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="example.dao.IEmpolyerDao">
    <resultMap id="BaseResultMap" type="example.pojo.Employer">
        <id column="auto_id" jdbcType="INTEGER" property="autoId" />
        <result column="company_id" jdbcType="VARCHAR" property="companyId" />
        <result column="employer_name" jdbcType="VARCHAR" property="employername" />
        <result column="employer_pwd" jdbcType="VARCHAR" property="employerPwd" />
        <result column="employer_address" jdbcType="VARCHAR" property="employerAddress" />
        <result column="employer_tel" jdbcType="VARCHAR" property="employerTel" />
        <result column="employer_email" jdbcType="VARCHAR" property="employerEmail" />
        <result column="employer_account" jdbcType="VARCHAR" property="employerAccount" />
    </resultMap>

    <sql id="Base_Column_List">
      auto_id, company_id, employer_name,
      employer_pwd, employer_address, employer_tel, employer_email
    </sql>

    <select id="findEmployerByAccount" resultMap="example.pojo.Employer">
        select
        <include refid="Base_Column_List"/>
        from t_employer t
        where  t.employer_account= #{account, jdbcType = VARCHAR}
    </select>

</mapper>