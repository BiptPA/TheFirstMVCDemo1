<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="example.dao.IEmpolyDao">
    <resultMap id="BaseResultMap" type="example.pojo.User">
        <id column="autoid" jdbcType="INTEGER" property="autoid" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
    </resultMap>

    <sql id="Base_Column_List">
      autoid, username, password
    </sql>

    <select id="getAllUsers" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_user
    </select>

    <insert id="insertUsers" parameterType="example.pojo.User">
        insert into t_user (username, password)
        values (#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR})
    </insert>

    <select id="findUserById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user
        where autoid = #{autoid, jdbcType=INTEGER}
    </select>
    <update id="updateUsers" parameterType="example.pojo.User">
    update t_user
    set username = #{username,jdbcType=VARCHAR}
    where autoid = #{autoid,jdbcType=INTEGER}
    </update>
<delete id="deleteUser" parameterType="example.pojo.User" >
    delete from t_user
    where autoid = #{autoid,jdbcType=INTEGER}
  </delete>
    <!--<select id="selectByName" parameterType="string" resultType="User">-->
        <!--select * from user where username = #{username}-->
    <!--</select>-->
</mapper>
